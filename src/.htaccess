ErrorDocument 404 /404/index.html

RewriteEngine on
RewriteCond %{HTTPS} !=on
RewriteCond %{ENV:HTTPS} !=on
RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule .* %{REQUEST_FILENAME}.html [QSA,L]

AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript text/javascript application/json

Header set Content-Security-Policy "\
 default-src 'none';\
 script-src 'self';\
 style-src 'self' fonts.googleapis.com;\
 font-src fonts.gstatic.com;\
 img-src 'self';\
 base-uri 'none';\
 frame-ancestors 'none';"
Header set Referrer-Policy no-referrer

<Files index.html>
	Header append Link <https://fonts.gstatic.com/s/pontanosans/v5/qFdD35GdgYR8EzR6oBLDHa3ayz8Ns1s.woff2>;rel="preload";as="font";crossorigin
	Header append Link <https://fonts.gstatic.com/s/pontanosans/v5/qFdD35GdgYR8EzR6oBLDHa3axT8N.woff2>;rel="preload";as="font";crossorigin
</Files>
