{
  "name": "website",
  "license": "MIT",
  "devDependencies": {
    "bower": "^1.8.0",
    "eslint": "^3.19.0",
    "eslint-config-crockford": "^1.0.0",
    "eslint-plugin-html": "^2.0.0",
    "feed": "^1.1.0",
    "fs-extra": "^3.0.1",
    "marked": "^0.3.6"
  },
  "scripts": {
    "postinstall": "bower install",
    "start": "cd src && polymer serve",
    "lint": "npm run lint:javascript && npm run lint:polymer",
    "lint:javascript": "eslint src --ext js,html --ignore-path .gitignore",
    "lint:polymer": "cd src && polymer lint",
    "build": "npm run build:data && npm run build:polymer",
    "build:data": "node tools/create-data-index.js",
    "build:polymer": "cd src && polymer build"
  }
}
