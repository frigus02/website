{
    "entrypoint": "index.html",
    "shell": "src/my-app.html",
    "fragments": [
        "src/my-view-404.html",
        "src/my-view-about.html",
        "src/my-view-impress.html",
        "src/my-view-posts.html",
        "src/my-view-projects.html"
    ],
    "sources": [
        "src/**/*",
        "images/**/*",
        "data-api/**/*",
        "bower.json"
    ],
    "extraDependencies": [
        "bower_components/webcomponentsjs/*.js"
    ],
    "lint": {
        "rules": ["polymer-2"]
    },
    "builds": [{
        "addServiceWorker": true,
        "bundle": true,
        "js": {"minify": true},
        "css": {"minify": true},
        "html": {"minify": true}
    }]
}
